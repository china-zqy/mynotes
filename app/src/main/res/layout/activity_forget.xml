<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bbb"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/login_title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="找回密码"
            android:textSize="36sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"

        android:layout_marginRight="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账  户  名："
            android:textSize="24sp" />

        <EditText
            android:id="@+id/edittext_account_forget"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@layout/edittext_shape"
            android:hint="请输入账户名"
            android:paddingLeft="10dp"
            android:textColor="#3b3c3c"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新的密码："
            android:textSize="24sp" />

        <EditText
            android:id="@+id/edittext_new_pw"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@layout/edittext_shape"
            android:hint="请输入新密码"
            android:paddingLeft="10dp"
            android:textColor="#3b3c3c"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认密码："
            android:textSize="24sp" />

        <EditText
            android:id="@+id/edittext_re_forget_pw"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@layout/edittext_shape"
            android:hint="请确认密码"
            android:paddingLeft="10dp"
            android:textColor="#3b3c3c"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <Button
            android:id="@+id/button_register_sure"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="45dp"
            android:background="@android:drawable/divider_horizontal_textfield"
            android:text="确认"
            android:textSize="26sp" />

        <Button
            android:id="@+id/button_forget_exit"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:drawable/divider_horizontal_textfield"
            android:text="返回"
            android:textSize="26sp" />

    </LinearLayout>
</LinearLayout>